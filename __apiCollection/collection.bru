meta {
  name: ShiftBook Complete API Collection
}

auth {
  mode: oauth2
}

auth:oauth2 {
  grant_type: client_credentials
  access_token_url: {{TOKEN_URL}}
  refresh_token_url: {{TOKEN_URL}}?grant_type=refresh_token
  client_id: {{CLIENT_ID}}
  client_secret: {{CLIENT_SECRET}}
  scope: shiftbook-srv!t459223.admin
  credentials_placement: body
  credentials_id: credentials
  token_placement: header
  token_header_prefix: Bearer
  auto_fetch_token: true
  auto_refresh_token: true
}

vars:pre-request {
  baseURL: {{BASE_URL}}
  CLIENT_ID: {{CLIENT_ID}}
  CLIENT_SECRET: {{CLIENT_SECRET}}
  "url": {{AUTH_URL}}
  TOKEN_URL: {{TOKEN_URL}}
}

docs {
  Complete API collection for ShiftBook CAP Service - All backend endpoints including entities, actions, and health checks
}

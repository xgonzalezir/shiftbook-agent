{
  "cds": {
    "requires": {
      "db": {
        "[development]": {
          "kind": "sqlite",
          "credentials": {
            "url": "db/shiftbook-dev.db"
          },
          "options": {
            "pragma": {
              "journal_mode": "WAL",
              "synchronous": "NORMAL",
              "cache_size": 10000,
              "temp_store": "MEMORY"
            }
          }
        },
        "[test]": {
          "kind": "sqlite",
          "credentials": {
            "url": ":memory:"
          },
          "options": {
            "pragma": {
              "journal_mode": "DELETE",
              "synchronous": "OFF",
              "cache_size": 1000
            }
          }
        },
        "[hybrid]": {
          "kind": "hana",
          "pool": {
            "min": 5,
            "max": 20,
            "acquireTimeoutMillis": 30000,
            "createTimeoutMillis": 30000,
            "destroyTimeoutMillis": 5000,
            "idleTimeoutMillis": 300000,
            "createRetryIntervalMillis": 200,
            "reapIntervalMillis": 1000,
            "handleDisconnects": true,
            "maxReconnectAttempts": 3,
            "reconnectDelay": 1000
          },
          "hana": {
            "encrypt": true,
            "validateCertificate": true,
            "packetSize": 32768,
            "maxDataSize": 268435456,
            "connectTimeout": 30000,
            "queryTimeout": 300000,
            "connectionPooling": true,
            "maxPoolSize": 20,
            "minPoolSize": 5
          }
        },
        "[production]": {
          "kind": "hana",
          "pool": {
            "min": 10,
            "max": 50,
            "acquireTimeoutMillis": 30000,
            "createTimeoutMillis": 30000,
            "destroyTimeoutMillis": 5000,
            "idleTimeoutMillis": 300000,
            "createRetryIntervalMillis": 200,
            "reapIntervalMillis": 1000,
            "handleDisconnects": true,
            "maxReconnectAttempts": 5,
            "reconnectDelay": 1000
          },
          "hana": {
            "encrypt": true,
            "validateCertificate": true,
            "packetSize": 32768,
            "maxDataSize": 268435456,
            "connectTimeout": 30000,
            "queryTimeout": 300000,
            "connectionPooling": true,
            "maxPoolSize": 50,
            "minPoolSize": 10
          }
        }
      }
    },
    "server": {
      "[development]": {
        "cors": {
          "origin": [
            "http://localhost:4004",
            "http://localhost:4005",
            "http://localhost:8080",
            "http://localhost:3000",
            "https://syntax-dmc-demo.execution.eu20-quality.web.dmc.cloud.sap"
          ],
          "methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "OPTIONS",
            "PATCH"
          ],
          "allowedHeaders": [
            "Content-Type",
            "Authorization",
            "X-Requested-With",
            "Accept",
            "Origin",
            "X-CSRF-Token"
          ],
          "credentials": true,
          "maxAge": 86400
        }
      },
      "[test]": {
        "cors": {
          "origin": [
            "http://localhost:4004",
            "http://localhost:4005",
            "https://syntax-dmc-test.execution.eu20-quality.web.dmc.cloud.sap"
          ],
          "methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "OPTIONS",
            "PATCH"
          ],
          "allowedHeaders": [
            "Content-Type",
            "Authorization",
            "X-Requested-With",
            "Accept",
            "Origin",
            "X-CSRF-Token"
          ],
          "credentials": true,
          "maxAge": 86400
        }
      },
      "[production]": {
        "cors": {
          "origin": [
            "https://*.sap.corp",
            "https://*.sap.com",
            "https://*.hana.ondemand.com",
            "https://syntax-dmc.execution.eu20.web.dmc.cloud.sap"
          ],
          "methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE",
            "OPTIONS",
            "PATCH"
          ],
          "allowedHeaders": [
            "Content-Type",
            "Authorization",
            "X-Requested-With",
            "Accept",
            "Origin",
            "X-CSRF-Token"
          ],
          "credentials": true,
          "maxAge": 86400
        }
      }
    },
    "auth": {
      "kind": "mocked",
      "users": {
        "alice": {
          "tenant": "t1",
          "roles": ["admin"]
        },
        "bob": {
          "tenant": "t1",
          "roles": ["cds.ExtensionDeveloper"]
        },
        "operator": {
          "tenant": "t1",
          "roles": ["shiftbook.read", "shiftbook.write"]
        },
        "manager": {
          "tenant": "t1",
          "roles": ["shiftbook.read", "shiftbook.write", "shiftbook.admin"]
        },
        "admin": {
          "tenant": "t1",
          "roles": ["shiftbook.read", "shiftbook.write", "shiftbook.admin", "shiftbook.email"]
        }
      }
    }
  }
} 